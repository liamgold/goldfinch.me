@using Goldfinch.Web.Components.ViewComponents.LatestBlogPosts

@model LatestBlogPostsViewModel

<section>
    <h2 class="text-2xl font-medium text-yellow-300 mt-24 mb-6">
        @Model.Title
    </h2>
    <div class="flex flex-col space-y-6">
        @foreach (var blogPost in Model.BlogPosts)
        {
            <partial name="PartialViews/BlogPost" model="blogPost" />
        }
    </div>
</section>