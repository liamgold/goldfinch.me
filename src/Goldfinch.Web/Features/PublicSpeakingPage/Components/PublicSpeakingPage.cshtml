@using Goldfinch.Core.PublicSpeaking
@model PublicSpeakingModel


<section>
    <h1>@Model.Page.DocumentName</h1>
    <div class="introduction">
        <editable-area area-identifier="PublicSpeaking" />
    </div>
</section>

<div>

    <div>
        @foreach (var item in Model.Years)
        {
            <div class="my-12">
                <h2 class="text-4xl text-yellow-300 mb-6">
                    @item.Year
                </h2>

                @foreach (var speakingEvent in item.SpeakingEngagements)
                {
                    <div class="border border-zinc-800 rounded-lg p-4 my-8">
                        <div class="text-yellow-400 font-semibold text-lg">@speakingEvent.Title</div>

                        <time datetime="@speakingEvent.EventDate.ToString("yyyy-MM-dd")" class="text-md text-zinc-300">
                            @speakingEvent.EventDate.ToString("dd MMMM yyyy")
                        </time>

                        <p class="text-md text-zinc-300">
                            @speakingEvent.EventName - @speakingEvent.EventLocation
                        </p>

                        <p class="mt-2 text-md text-zinc-300">@speakingEvent.Description</p>

                        @if (!string.IsNullOrWhiteSpace(@speakingEvent.RecordingLink))
                        {
                            <a href="@speakingEvent.RecordingLink" target="_blank" class="mt-4 flex items-center font-medium text-yellow-100 justify-items-end">
                                Watch Recording
                                <svg xmlns="http://www.w3.org/2000/svg" class="ml-2" viewBox="0 0 512 512" height="1em" width="1em" stroke="currentColor" fill="currentColor" stroke-width="0"><!--!Font Awesome Free 6.7.2 by @@fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zM188.3 147.1c-7.6 4.2-12.3 12.3-12.3 20.9l0 176c0 8.7 4.7 16.7 12.3 20.9s16.8 4.1 24.3-.5l144-88c7.1-4.4 11.5-12.1 11.5-20.5s-4.4-16.1-11.5-20.5l-144-88c-7.4-4.5-16.7-4.7-24.3-.5z" /></svg>
                            </a>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>